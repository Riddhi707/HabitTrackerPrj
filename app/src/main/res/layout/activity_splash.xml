<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:fitsSystemWindows="true"
    android:background="@drawable/splash_background"> <!-- Reference to your gradient background -->

    <!-- Title -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habit Tracker"
        android:textSize="50sp"
        android:textColor="#6C047C"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_marginTop="2dp"/> <!-- Adjust margin top as needed -->

    <!-- Quote -->
    <TextView
        android:id="@+id/app_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="“Small habits make a big difference”"
        android:textSize="18sp"
        android:textColor="#1C1423"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_marginBottom="32dp" />

    <!-- Image -->
    <ImageView
        android:id="@+id/habit_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/clock"
        android:contentDescription="Habit Tracking Image" />



</LinearLayout>
