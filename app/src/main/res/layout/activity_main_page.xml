<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    android:paddingTop="5dp"
    android:background="@color/lavender"
    android:fitsSystemWindows="true">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="8dp"
        android:paddingTop="5dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habit Tracker"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <!-- Small Image to the right -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/clock"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="130dp" />
    </LinearLayout>

    <!-- Image related to Habit Tracker -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/habit"
        android:contentDescription="Habit Tracker"
        android:layout_marginBottom="1dp"
        android:padding="0dp"/>

    <!-- Motivational Quote -->
    <TextView
        android:id="@+id/motivationalQuote1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="“Success is the sum of small efforts, repeated day in and day out.”"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingTop="24dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="50dp"/>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="2dp"
        android:indeterminate="false"
        android:progress="50"
        android:max="100" />

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="1">

        <!-- Build Habit Button -->
        <Button
            android:id="@+id/btnBuildHabit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Build a Habit"
            android:textColor="@color/background"
            android:background="@drawable/selector_button"
            android:layout_marginBottom="12dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="30dp"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <!-- Quit Habit Button -->
        <Button
            android:id="@+id/btnQuitHabit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quit a Habit"
            android:textColor="@color/background"

        android:drawablePadding="10dp"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
            android:background="@drawable/selector_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            />
    </LinearLayout>

</LinearLayout>
